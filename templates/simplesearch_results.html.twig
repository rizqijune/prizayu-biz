{% extends 'partials/base.html.twig' %}

{% block content %}
<div class="search-results">
    <h1 class="text-2xl font-bold">Search Results</h1>
    <p class="text-gray-600">
        Found {{ search_results|length }} result(s) for "{{ query|e }}"
    </p>

    {% if search_results|length %}
        <ul class="space-y-4">
            {% for result in search_results %}
            <li class="p-4 bg-gray-100 rounded shadow hover:shadow-lg transition">
                <a href="{{ result.url }}" class="text-blue-500 hover:underline">
                    {{ result.title }}
                </a>
                <p class="text-sm text-gray-600">
                    {{ result.content|striptags|slice(0, 150) }}...
                </p>
            </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="text-red-500">No results found.</p>
    {% endif %}
</div>
{% endblock %}
