{# 
  //--------------------------------------------------------------
  *                        ALPINE.JS                           *
  //--------------------------------------------------------------

  * Documentation :
  * 1. On the main element/tag add the search in x-data
  *       Example : <nav x-data="{ mobileMenuIsOpen: false, isVisible: true, lastScrollY: 0, search: false }"
  *   @scroll.window="if (window.scrollY > lastScrollY && window.scrollY > 100) { isVisible = false } else { isVisible = true; } lastScrollY = window.scrollY"
  *   :class="{'translate-y-0': isVisible, '-translate-y-full': !isVisible}"
  *   class="w-full bg-opacity-80 backdrop-blur-md fixed top-0 left-0 z-20 flex items-center justify-between p-4 transition-transform duration-300 ease-in-out bg-white"
  *   aria-label="menu">
  * 2. On the toggle add @click="search = true" inside the tag to trigger the modal
  * 3. Include this component inside the main element/tag with {% include 'partials/components/searchbox.html.twig' %}

  * FOR MORE EXAMPLE CHECK OUT -> /partials/layout/navbar.html.twig
     #}

<template x-teleport="body">
	<div
		x-show="search" class="fixed top-0 left-0 z-[99] flex items-center justify-center w-full h-full" x-cloak @keyup.escape="search=false">
		{# Backdrop #}
		<div x-show="search" x-transition:enter="ease-out duration-300" x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100" x-transition:leave="ease-in duration-300" x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0" @click="search=false" class="backdrop-blur-sm bg-opacity-70 absolute inset-0 w-full h-full bg-white"></div>
		{% set min_chars = config.get('plugins.simplesearch.min_query_length', 3) %}
		{# Search modal #}
		    <div
			x-show="search" x-trap.inert.noscroll="search" x-transition:enter="ease-out duration-300" x-transition:enter-start="opacity-0 -translate-y-2 sm:scale-95" x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100" x-transition:leave="ease-in duration-200" x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100" x-transition:leave-end="opacity-0 -translate-y-2 sm:scale-95" class="px-7 border-neutral-200 sm:max-w-lg sm:rounded-lg relative w-full h-full py-6 bg-white border dark:border-zinc-700 shadow-lg">
			{# header #}
			    <div
				class="flex items-center justify-between pb-3 flex-col search-wrapper">
				{# Search Input #}

				    <div class="flex w-full p-2 mb-5 items-center">
					    <div @click="search=false" class="hover:bg-zinc-100 p-2 dark:hover:bg-zinc-700 mr-1 rounded-full cursor-pointer">
						<svg class="w-6 h-6 text-black" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20" fill="currentColor">
							<path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"/>
						</svg>
					</div>
					<!-- Search Form -->
					<form method="get" name="search" data-simplesearch-form class="flex w-full" action="{{ base_url_absolute }}/search" x-data="{ query: '', minChars: {{ min_chars }} }">
						<input x-model="query" name="query" class="search-input flex-shrink focus:outline-none focus:shadow-outline lg:text-sm bg-zinc-100 dark:bg-zinc-700 w-full py-4 pl-4 text-xs font-bold leading-tight text-gray-700 antialiased rounded-full" type="text" aria-label="search" placeholder="{{ 'PNYA.BLOG.THEME.SEARCH' |t |e }}" required/>
						<small :class="{ 'block': query.length < minChars }" class="hidden pl-0.5 text-red-500">Error: Name field is required</small>
						<button type="submit" class="hover:bg-secondary mx-2 bg-primary rounded-full cursor-pointer p-3 flex items-center justify-center" :disabled="query.length < minChars" :class="{ 'opacity-50 cursor-not-allowed': query.length < minChars }">
							<svg class="w-6 h-6 text-white dark:text-black" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20" fill="currentColor">
								<path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
							</svg>
						</button>
					</form>
					{# Search Input #}
				</div>
				<!-- Grid Layout (Centered and updated) -->
				<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6 justify-items-center">
					<div class="border w-full p-4 text-center rounded-lg shadow-md">
						<p class="font-bold">Card 1</p>
						<p>Some card content here</p>
					</div>
					<div class="border w-full p-4 text-center rounded-lg shadow-md">
						<p class="font-bold">Card 2</p>
						<p>Some card content here</p>
					</div>
					<div class="border w-full p-4 text-center rounded-lg shadow-md">
						<p class="font-bold">Card 3</p>
						<p>Some card content here</p>
					</div>
					<div class="border w-full p-4 text-center rounded-lg shadow-md">
						<p class="font-bold">Card 4</p>
						<p>Some card content here</p>
					</div>
					<div class="border w-full p-4 text-center rounded-lg shadow-md col-span-2 sm:col-span-1 xl:col-span-2">
						<p class="font-bold">Advertising Here</p>
						<p>Ad space content</p>
                    </div>
                </div>
			</div>

		</div>
	</div>
</template>
