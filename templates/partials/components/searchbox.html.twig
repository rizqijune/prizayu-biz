        <template x-teleport="body">
            <div x-show="search"
                class="fixed top-0 left-0 z-[99] flex items-center justify-center w-full h-full"
                x-cloak>
                <div x-show="search"
                    x-transition:enter="ease-out duration-300"
                    x-transition:enter-start="opacity-0"
                    x-transition:enter-end="opacity-100"
                    x-transition:leave="ease-in duration-300"
                    x-transition:leave-start="opacity-100"
                    x-transition:leave-end="opacity-0"
                    @click="search=false"
                    class="backdrop-blur-sm bg-opacity-70 absolute inset-0 w-full h-full bg-white"></div>
                <div x-show="search"
                    x-trap.inert.noscroll="search"
                    x-transition:enter="ease-out duration-300"
                    x-transition:enter-start="opacity-0 -translate-y-2 sm:scale-95"
                    x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
                    x-transition:leave="ease-in duration-200"
                    x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
                    x-transition:leave-end="opacity-0 -translate-y-2 sm:scale-95"
                    class="px-7 border-neutral-200 sm:max-w-lg sm:rounded-lg relative w-full h-full py-6 bg-white border dark:border-zinc-700 shadow-lg">
                    <div class="flex items-center justify-between pb-3">
                        {# Search Input #}
                        <div class="sticky flex items-center justify-between w-full p-2 mb-5">
                            <div>
                                <div @click="search=false"
                                    class="hover:bg-gray-100 p-2 mr-1 rounded-full cursor-pointer">
                                    <svg class="w-6 h-6 text-gray-500"
                                        xmlns="http://www.w3.org/2000/svg"
                                        viewBox="0 0 20 20"
                                        fill="currentColor">
                                        <path fill-rule="evenodd"
                                            d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
                                            clip-rule="evenodd" />
                                    </svg>
                                </div>
                            </div>

                            <input class="focus:outline-none focus:shadow-outline lg:text-sm bg-neutral-100 w-full py-4 pl-4 text-xs font-bold leading-tight text-gray-700 antialiased rounded-full"
                                type="text"
                                placeholder="{{ 'PNYA.BLOG.THEME.SEARCH'
                                    |t
                                    |e }}" />

                            <div class="hover:bg-secondary p-2 mx-2 bg-primary rounded-full cursor-pointer">
                                <svg class="w-6 h-6 text-light"
                                    xmlns="http://www.w3.org/2000/svg"
                                    viewBox="0 0 20 20"
                                    fill="currentColor">
                                    <path fill-rule="evenodd"
                                        d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
                                        clip-rule="evenodd" />
                                </svg>
                            </div>
                        </div>
                        {# Search Input #}
                    </div>
                    <div class="relative w-auto pb-8">
                        <p>
                            This is placeholder text. Replace it with your own
                            content.
                        </p>
                    </div>
                    <div class="sm:flex-row sm:justify-end sm:space-x-2 flex flex-col-reverse">
                        <button @click="search=false"
                            type="button"
                            class="focus:outline-none focus:ring-2 focus:ring-neutral-100 focus:ring-offset-2 inline-flex items-center justify-center h-10 px-4 py-2 text-sm font-medium transition-colors border rounded-md">
                            Cancel
                        </button>
                        <button @click="search=false"
                            type="button"
                            class="focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:ring-offset-2 bg-primary hover:bg-neutral-900 inline-flex items-center justify-center h-10 px-4 py-2 text-sm font-medium text-white transition-colors border border-transparent rounded-md">
                            Continue
                        </button>
                    </div>
                </div>
            </div>
        </template>
    </div>